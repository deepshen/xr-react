{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "lib",
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "emitDeclarationOnly": true
  },
  "include": ["./src/components", "global.d.ts"],
  "exclude": ["node_modules","lib","esm"]
}
